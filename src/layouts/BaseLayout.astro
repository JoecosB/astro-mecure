---
export interface Props {
  title?: string;
  description?: string;
  author?: string;
  favicon?: string;
}

const { title, description, author, favicon } = Astro.props;
import Html from './Html.astro';

---

<Html title={title} description={description} author={author} favicon={favicon} generator={Astro.generator} canonical={Astro.url.href}>
  <slot name="head" slot="head" />
  <slot />
</Html>